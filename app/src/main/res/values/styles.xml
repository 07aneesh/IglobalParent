<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!--Material design tab view styles-->
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
            <item name="android:buttonStyle">@style/RobotoTextViewStyle</item>-->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--Custom tab background -->
    <style name="MyCustomTabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_bg</item>
        <item name="tabIndicatorColor">#ffffff</item>
    </style>

    <style name="TableHeaderGrey" parent="android:Widget">
        <item name="android:background">@color/deepDarkgrey</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/heading_two</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DriverAccountItemHeading" parent="android:Widget">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="DriverAccountItem" parent="android:Widget">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--NORMAL LIST FONTS STYLE........................................... -->

    <style name="listItemSilverHeading" parent="android:Widget">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/lightgrey</item>
    </style>
    <style name="listItemSilver" parent="android:Widget">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/lightgrey</item>
    </style>
    <style name="listItemWhiteHeading" parent="android:Widget">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="listItemWhite" parent="android:Widget">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="listItemGoldHeading" parent="android:Widget">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/buttonTextColor_gold</item>
    </style>
    <style name="listItemGold" parent="android:Widget">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="listItemBigDate" parent="android:Widget">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--NORMAL LIST FONTS STYLE........................................... -->

    <!--ACCOUNTS SECTION STYLE............................................ -->
    <style name="accordionListHeader" parent="android:Widget">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/listHeaderColor</item>
    </style>
    <style name="listItemHeading" parent="android:Widget">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/listItemHeadingColor</item>
    </style>
    <style name="listItemSubHeading" parent="android:Widget">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/listItemSubHeadingColor</item>
    </style>
    <style name="listItem" parent="android:Widget">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/listItemColor</item>
    </style>
    <!--ACCOUNTS SECTION STYLE............................................ -->

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--BASIC FONT STYLES-->
    <style name="headingFont" parent="android:Widget">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="subHeadingFont" parent="android:Widget">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="normalFont" parent="android:Widget">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="headingFontBlack" parent="android:Widget">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/deepDarkgrey</item>
    </style>
    <style name="subHeadingFontBlack" parent="android:Widget">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/deepDarkgrey</item>
    </style>
    <style name="normalFontBlack" parent="android:Widget">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/deepDarkgrey</item>
    </style>

    <style name="headingFontPrimary" parent="android:Widget">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="subHeadingFontPrimary" parent="android:Widget">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="normalFontPrimary" parent="android:Widget">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <!--BASIC FONT STYLES-->
    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Oswald-Regular.ttf</item>
    </style>

    <!--RECORDS STYLE-->fontPath="fonts/OpenSans-Bold.ttf"
    <style name="recordsTitleText" parent="android:Widget">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
    </style>
    <!--RECORDS STYLE-->

    <!--TRIP REQUEST STYLE-->
    <style name="tripRequestNormal" parent="android:Widget">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="tripRequestHeading" parent="android:Widget">
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/lightgrey</item>
    </style>
    <!--TRIP REQUEST STYLE-->

    <style name="orangeRadioButton" parent="android:Widget">
        <item name="android:button">@drawable/custom_radio_orange</item>
    </style>

</resources>
