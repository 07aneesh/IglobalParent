<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <TextView
        android:id="@+id/messageTitle"
        android:maxLines="2"
        android:textAlignment="center"
        fontPath="fonts/Oswald-Regular.ttf"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/messageText"
        android:maxLines="3"
        android:textAlignment="center"
        fontPath="fonts/Oswald-Regular.ttf"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/messageOkBtn"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/ok"
            fontPath="fonts/Oswald-Regular.ttf"
            android:textSize="@dimen/order_oval_btn_text_size"
            android:background="@drawable/orange_rect_btn"
            android:layout_width="@dimen/order_oval_btn_width"
            android:layout_height="@dimen/order_oval_btn_height" />
        <Button
            android:id="@+id/messageCancelBtn"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/appBarBgColor"
            android:background="@android:color/transparent"
            android:text="@string/cancel"
            fontPath="fonts/Oswald-Regular.ttf"
            android:textSize="@dimen/order_oval_btn_text_size"
            android:layout_width="@dimen/order_oval_btn_width"
            android:layout_height="@dimen/order_oval_btn_height" />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>