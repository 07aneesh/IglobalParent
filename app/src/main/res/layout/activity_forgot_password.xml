<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgotPasswordLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="horizontal"
    android:weightSum="1"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.cts.cheetah.view.login.LoginActivity">
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".15"/>

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/schoolsoft_logo"
                android:paddingBottom="30dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:paddingBottom="20dp"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/password.reset.direction"
                style="@style/normalFontBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/emailResetPassword"
                android:background="@color/white"
                android:textColor="@color/lightgrey"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:hint="@string/login.label.email"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/normal_text_size"
                android:drawableLeft="@drawable/user_icon"
                android:drawablePadding="14dp"
                android:maxLines="1"/>

            <Button
                android:id="@+id/passwordResetButton"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="24dp"
                android:text="@string/resetpassword"
                android:textColor="@color/white"
                android:background="@color/darkgrey"
                android:textSize="@dimen/sub_heading_text_size"
                fontPath="fonts/Oswald-Regular.ttf"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/backToLgin"
                android:layout_marginTop="20dp"
                android:layout_gravity="right|center_vertical"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/back.to.login"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />

        </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".15"/>


</LinearLayout>
