<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        card_view:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/darkgrey"
        card_view:cardCornerRadius="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkgrey"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">
            <!--TITLE SECTION-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <TextView
                    android:id="@+id/tripId"
                    android:layout_centerVertical="true"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    fontPath="fonts/Oswald-Regular.ttf"
                    android:textSize="@dimen/normal_text_size"/>
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="270dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/trip_start_dotted"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"/>
                    <ImageView
                        android:background="@drawable/trip_end_dotted"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:text="40 min/39 miles"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/tripDuration"
                        android:gravity="center"
                        android:background="@color/darkgrey"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text_size"/>

                </RelativeLayout>
                <TextView
                    android:drawableRight="@drawable/icon_view_more"
                    android:drawablePadding="10dp"
                    android:id="@+id/tripStatus"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Enroute"
                    android:textColor="@color/lightgrey"
                    android:textSize="@dimen/small_heading_text"/>
            </RelativeLayout>
            <!--TITLE SECTION-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <!--PICK UP SECTION STARTS  -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight=".49"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="15dp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:background="@color/deepDarkgrey">
                            <TextView
                                android:text="10"
                                android:id="@+id/pickupDate"
                                android:textColor="@color/white"
                                android:layout_width="0dp"
                                android:layout_weight=".2"
                                android:gravity="left"
                                android:layout_marginRight="8dp"
                                style="@style/listItemBigDate"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/pickupWeekMonthAndYear"
                                android:gravity="left"
                                style="@style/listItemSilver"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/pickupTime"
                                android:gravity="right"
                                style="@style/listItemGold"
                                android:layout_width="0dp"
                                android:layout_weight=".3"
                                android:layout_height="wrap_content"
                                android:paddingBottom="0dp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:gravity="center_vertical"
                            android:background="@color/deepDarkgrey">
                            <TextView
                                android:id="@+id/pickupAddress"
                                style="@style/listItemSilver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:paddingRight="20dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/pickPrevBtn"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/prev_arrow_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/pickNextBtn"
                        android:src="@drawable/next_arrow_grey"
                        android:layout_gravity="right|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <!--PICK UP SECTION ENDS  -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".02"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"/>

                <!--DROP OFF SECTION STARTS  -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight=".49"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="15dp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:gravity="left|center_vertical"
                            android:background="@color/deepDarkgrey">
                            <TextView
                                android:id="@+id/dropDate"
                                android:textColor="@color/white"
                                android:layout_width="0dp"
                                android:layout_weight=".2"
                                android:gravity="left"
                                android:layout_marginRight="8dp"
                                style="@style/listItemBigDate"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/dropWeekMonthAndYear"
                                android:gravity="left"
                                style="@style/listItemSilver"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/dropTime"
                                android:gravity="right"
                                style="@style/listItemGold"
                                android:layout_width="0dp"
                                android:layout_weight=".3"
                                android:layout_height="wrap_content"
                                android:paddingBottom="0dp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:gravity="center_vertical"
                            android:background="@color/deepDarkgrey">
                            <TextView
                                android:id="@+id/dropAddress"
                                style="@style/listItemSilver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:paddingRight="20dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/dropPrevBtn"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/prev_arrow_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/dropNextBtn"
                        android:src="@drawable/next_arrow_grey"
                        android:layout_gravity="right|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <!--DROP OFF SECTION ENDS  -->
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <FrameLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/locationDistanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/listItemWhite"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/orange_location_icon"
            android:drawablePadding="5dp" />
        <LinearLayout
            android:id="@+id/resumeCancel_btns_layout"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Earnings : "
                style="@style/listItemWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/earningsAmount"
                style="@style/listItemGoldHeading"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/startButton"
                android:text="@string/trip.label.start"
                android:textSize="@dimen/order_oval_btn_text_size"
                android:background="@drawable/orange_rect_btn"
                android:layout_marginRight="6dp"
                android:layout_width="@dimen/order_oval_btn_width"
                android:layout_height="@dimen/order_oval_btn_height" />
            <Button
                android:id="@+id/cancelButton"
                android:visibility="gone"
                android:text="@string/trip.label.cancel"
                android:textSize="@dimen/order_oval_btn_text_size"
                android:background="@color/darkgrey"
                android:textColor="@color/colorPrimary"
                android:layout_width="65dp"
                android:layout_height="@dimen/order_oval_btn_height" />
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deepDarkgrey"/>
    </RelativeLayout>
</LinearLayout>