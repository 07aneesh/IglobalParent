<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/darkestgrey"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/contactPerson"
                style="@style/listItemSilver"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/driver"
                android:drawablePadding="10dp"
                android:maxLines="1"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/contactNo"
                style="@style/listItemSilver"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="10dp"
                android:maxLines="1"
                android:paddingRight="20dp"/>
    </LinearLayout>

    <TextView
        android:text="@string/trip.label.alternate.contacts"
        android:textColor="@color/lightgrey"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/alternateContactPerson"
            style="@style/listItemSilver"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/driver"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/alternateContactNo"
            style="@style/listItemSilver"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:paddingRight="20dp"/>
    </LinearLayout>
</LinearLayout>